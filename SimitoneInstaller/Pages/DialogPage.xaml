<Page x:Class="Simitone.Installer.UI.Pages.DialogPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Simitone.Installer.UI.Pages"
      xmlns:controls="clr-namespace:Simitone.Installer.UI.Controls"
      mc:Ignorable="d" 
      d:DesignHeight="200" d:DesignWidth="300"
      Title="DialogPage" Name="Host" Foreground="White">

    <Grid>
        <StackPanel>
            <controls:HeaderControl Margin="0,10,0,0" Content="{Binding Title, ElementName=Host}"/>
            <TextBlock Margin="30,10,10,0" Text="{Binding Text, ElementName=Host}" FontSize="18" TextWrapping="Wrap"/>
        </StackPanel>
        <StackPanel x:Name="ButtonsHost" Height="75" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,10">
            <Button x:Name="ButtonDesign" Foreground="#FF004000">OK</Button>
        </StackPanel>
    </Grid>
</Page>
