<UserControl x:Class="Simitone.Installer.UI.Controls.SimitoneBackgroundPiece"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Simitone.Installer.UI.Controls"
             mc:Ignorable="d" 
             d:DesignWidth="800" Height="50" Background="#A5000000">
    <UserControl.Template>
        <ControlTemplate TargetType="UserControl">
            <DockPanel>
                <Polygon Fill="{TemplateBinding Background}" Width="40" DockPanel.Dock="Right">
                    <Polygon.Points>
                        <Point X="0" Y="0"/>
                        <Point X="0" Y="50"/>
                        <Point X="30" Y="25"/>
                    </Polygon.Points>
                </Polygon>
                <Rectangle Fill="{TemplateBinding Background}"/>
            </DockPanel>
        </ControlTemplate>
    </UserControl.Template>
</UserControl>
